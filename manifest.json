{
    "manifest_version": 2,
    "name": "X-Test",
    "version": "0.1",
    "description": "An actually usable XPath tester for Firefox?",
  
    "background": {
      "scripts": [
        "scripts/background.js"
      ]
    },
  
    "browser_action": {
      "default_title": "X-Test"
    },

    "sidebar_action": {
      "default_title": "X-Test",
      "default_panel": "panel/panel.html"
    },
    
    "permissions": [
      "tabs",
      "activeTab"
    ],
  
    "web_accessible_resources": [
      "panel/panel.html",
      "panel/panel.css",
      "panel/panel.js",
      "panel/panelUtils.js",

      "globalStyles/xCheckWrapper.css"
    ]
  }